{% extends 'layouts/base.njk' %}

{% block content %}
  {% if frontmatter %}
    {% if frontmatter.title_image %}<img src="/images/profile.jpeg" alt="Jake Mulley's headshot">{% endif %}

    <h1>{{ frontmatter.title }}</h1>

    {% if frontmatter.subtitle %}
      <h2>{{ frontmatter.subtitle }}</h2>
    {% endif %}
  {% endif %}

  {{ content | safe }}
{% endblock %}
